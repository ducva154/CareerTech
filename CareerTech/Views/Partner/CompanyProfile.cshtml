
@{
    ViewBag.Title = "Company Profile";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}

<div class="row">
    <div class="col s12 m12 l0">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Add Your Profile Company</span><br>
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="col s6">
                                <label style="font-size: 16px;">Upload cover your company</label>
                                <div action="#" class="p-v-xs">
                                    <div class="file-field input-field">
                                        <div class="btn teal lighten-1">
                                            <span>File</span>
                                            <input type="file" multiple>
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text" placeholder="Upload cover your company">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col s6">
                                <label style="font-size: 16px;">Upload avatar company</label>
                                <div action="#" class="p-v-xs">
                                    <div class="file-field input-field">
                                        <div class="btn teal lighten-1">
                                            <span>File</span>
                                            <input type="file">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text" placeholder="Upload avatar company">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="input-field col s6">
                                <input id="company-name" type="text" class="validate">
                                <label class="active" for="company-name">Comany name</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="domain-company" type="text" class="validate">
                                <label class="active" for="domain-company">Domain company</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="total-employee" type="text" class="validate">
                                <label class="active" for="total-employee">Total employee</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="address" type="text" class="validate">
                                <label class="active" for="address">Address</label>
                            </div>
                            <div class="input-field col s12" style="margin-top:50px;">
                                <label class="active" for="intro-company">Introduction company</label>
                            </div>
                            <div class="input-field col s12">
                                <textarea class="ckeditor" name="introCompany" cols="10" rows="30" style="height: 12rem;padding: 15px;"></textarea>
                            </div>
                            <button class="btn teal" style="margin: 20px 0px 0px 20px ;">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

