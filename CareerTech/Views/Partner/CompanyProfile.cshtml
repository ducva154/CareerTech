
@{
    ViewBag.Title = "Company Profile";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";

}

@model CareerTech.Models.CompanyProfileViewModel
<main class="mn-inner inner-active-sidebar">
    <div class="middle-content">
        <h1 class="message-danger">@ViewBag.approveStatus</h1>
        <div class="row">
            <div class="col s12 m12 l0">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Edit Your Profile Company</span><br>
                        <div class="btn btn-info">
                            <a style="color:white;" href="~/company/@Session[CareerTech.Utils.SessionConstant.COMPANY_ID].ToString()" target="_blank">View Company Profile</a>
                            </div><br>
                        <span class="@ViewBag.type">@ViewBag.message</span>
                        @Html.ValidationSummary("", new { @class = "message-danger" })
                        <div class="row">
                            @using (Html.BeginForm("EditCompany", "Partner", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="row">
                                    <div class="col s6">
                                        <label style="font-size: 16px;">Upload cover your company</label>
                                        <div class="p-v-xs">
                                            <div class="file-field input-field">
                                                <div class="btn teal lighten-1">
                                                    <span>File</span>
                                                    @Html.TextBoxFor(m => m.Url_Background, new { Name = "imgCover", type = "file" })
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <input class="file-path validate" type="text" placeholder="Change Cover">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col s6">
                                        <label style="font-size: 16px;">Upload avatar company</label>
                                        <div class="p-v-xs">
                                            <div class="file-field input-field">
                                                <div class="btn teal lighten-1">
                                                    <span>File</span>
                                                    @Html.TextBoxFor(m => m.Url_Avatar, new { Name = "imgAvatar", type = "file" })
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <input class="file-path validate" type="text" placeholder="Change avatar">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-field col m6 s12">
                                        @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="input-field col m6 s12">
                                        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="input-field col m6 s12">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="input-field col m6 s12">
                                        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(m => m.Address, ViewBag.ListAddress as SelectList, "--Select address--", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="input-field col s12" style="margin-top: 50px;">
                                        @Html.LabelFor(m => m.Desc, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(m => m.Desc, new { @class = "ckeditor" })
                                        </div>
                                        <button class="btn teal" style="margin: 20px 0px 0px 20px ;">Save</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>