
@{
    ViewBag.Title = "Partner Profile";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}
@model CareerTech.Models.ApplicationUser
<div class="row">
    <div class="col s12 m12 l6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Update fields</span><br>
                <div class="row">
                    <div class="col s12">
                        <span>@ViewBag.Error</span>
                    </div>
                    @using (Html.BeginForm("PartnerProfile", "Partner", FormMethod.Post, new { @class = "col s12" }))
                    {
                        <div class="input-field col s12">
                            <input id="first_name" type="text" class="validate" value="@Model.UserName" readonly>
                            <label class="active" for="first_name">Account</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="password" type="password" class="validate" value="@Model.PasswordHash" readonly>
                            <label class="active" for="password">Password</label>
                        </div>
                        <div class="col s6">
                            <a href="">Change password</a>
                        </div>
                        <div class="input-field col s12">
                            <input id="phone" type="text" class="validate" value="@Model.PhoneNumber">
                            <label class="active" for="phone">Phone</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate" value="@Model.Email">
                            <label class="active" for="email">Email</label>
                        </div>
                        <div class="col s12">
                            <button class="btn teal">Update</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



