
@{
    ViewBag.Title = "Partner Profile";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}
@model CareerTech.Models.ApplicationUser
<main class="mn-inner inner-active-sidebar">
    <div class="middle-content">
        <div class="row">
            <div class="col s12 m12 l6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Update fields</span><br>
                        <span id="@ViewBag.type">@ViewBag.message</span>
                        <div class="row">
                            @using (Html.BeginForm("UpdateProfile", "Partner", FormMethod.Post, new { @class = "col s12" }))
                            {
                                <div class="input-field col s12">
                                    <input id="email" type="email" name="email" class="validate" value="@Model.Email" readonly required>
                                    <label class="active" for="email">Email</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="password" type="password" class="validate" value="--------" readonly required>
                                    <label class="active" for="password">Password</label>
                                </div>
                                <div class="col s6">
                                    <a href="/Manage/ChangePassword">Change Password</a>
                                </div>
                                <div class="input-field col s12">
                                    <input id="Fullname" name="fullname" type="text" class="validate" value="@Model.FullName" required>
                                    <label class="active" for="Fullname">Full name</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="phone" type="text" name="phone" class="validate" value="@Model.PhoneNumber" required>
                                    <label class="active" for="phone">Phone</label>
                                </div>
                                <div class="col s12">
                                    <button class="btn teal">update</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>

