@{
    ViewBag.Title = "About";
}


<div class="page-section" id="about">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 py-3 wow fadeInUp">
                <span class="subhead">About us</span>
                <h2 class="title-section">@ViewBag.About.Title</h2>
                <div class="divider"></div>

                @Html.Raw(ViewBag.About.Detail.ToString())
            </div>
            <div class="col-lg-6 py-3 wow fadeInRight">
                <div class="img-fluid py-3 text-center">
                    @Html.Raw(ViewBag.About.Desc.ToString())
                </div>
            </div>
        </div>
    </div> <!-- .container -->
</div> <!-- .page-section -->
<div class="page-section bg-light">
    <div class="container">
        <div class="text-center wow fadeInUp">
            <div class="subhead">Our Partners</div>
            <h2 class="title-section">How SEO Team Can Help</h2>
            <div class="divider mx-auto"></div>
        </div>
        <div class="row">
            @*Begin Foreach*@
            @for (var i = 0; i < 8; i++)
            {
                <div class="col-sm-6 col-lg-4 col-xl-3 py-3 wow zoomIn">
                    <div class="features">
                        <div class="header mb-3">
                            <a href="#" style="width: 100%;height: 80px;display: flex;align-items: center;justify-content: center;margin: auto;padding: 0px;">
                                <img src="~/Content/Home/img/ic-logo.png" alt="" style="max-height: 100%;width:auto; display: block;max-width: 350%;height: auto">
                            </a>
                        </div>
                        <h5>FPT</h5>
                        <p>We analyse your website's structure, internal architecture & other key</p>
                    </div>
                </div>
            }
            @*End Foreach*@
        </div>

    </div> <!-- .container -->
</div> <!-- .page-section -->
