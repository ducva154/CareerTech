@model CareerTech.Models.Profile
@{
    ViewBag.Title = "Edit_Profile_Portfolio";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
    var profile = ViewBag.Profile;
    string desc = profile != null ? profile.Desc : "";
}

<main class="mn-inner inner-active-sidebar">
    <div class="middle-content">
        <div class="row no-m-t no-m-b">
            @Html.Partial("_Portfolio_Menu_Partial")
            <div class="col s12 m7 l9">
                <h5>@ViewBag.Portfolio.Name</h5>
                <div class="card">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="card-content">
                        @using (Html.BeginForm("EditProfilePortfolioAsync", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            <div id="example_wrapper" class="dataTables_wrapper">
                                <div class="row">
                                    @Html.TextBoxFor(m => m.PortfolioID, new { @readonly = "readonly", @class = "form-control hide", @Value = ViewBag.Portfolio.ID })
                                    <div class="input-field col m6 s12">
                                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Value = (profile != null ? profile.Name : "") })
                                        </div>
                                    </div>
                                    <div class="file-field input-field col m6 s12">
                                        <div class="btn teal lighten-1">
                                            <span>Image</span>
                                            @Html.TextBox("Url_avatar", "", new { type = "file" })
                                        </div>
                                        <div class="file-path-wrapper">
                                            @Html.TextBoxFor(m => m.Url_avatar, new { @class = "file-path validate", @Value = (@profile != null ? @profile.Url_avatar : "") })
                                        </div>
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Age, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @Value = (profile != null ? profile.Age : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Gender, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>
                                            { new SelectListItem{Text = "Male", Value = "True", Selected = (profile == null || profile.Gender == true)? true : false},
                                            new SelectListItem { Text = "Female", Value = "False", Selected = (profile == null || profile.Gender == true) ? false : true }})
                                    </div>
                                </div>
                                <div class="input-field col s12">
                                    @Html.LabelFor(m => m.Position, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Position, new { @class = "form-control", @Value = (profile != null ? profile.Position : "") })
                                    </div>
                                </div>
                                <div class="input-field col s12">
                                    @Html.LabelFor(m => m.Desc, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @*@Html.TextAreaFor (m => m.Desc, new { @class = "materialize-textarea" })*@
                                        @Html.TextArea("Desc", desc, new { @class = "materialize-textarea" })
                                    </div>
                                </div>
                                <div class="input-field col s12">
                                    @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @Value = (profile != null ? profile.Address : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @Value = (profile != null ? profile.Phone : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Value = (profile != null ? profile.Email : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Facebook_url, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Facebook_url, new { @class = "form-control", @Value = (profile != null ? profile.Facebook_url : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Twitter_url, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Twitter_url, new { @class = "form-control", @Value = (profile != null ? profile.Twitter_url : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Youtube_url, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Youtube_url, new { @class = "form-control", @Value = (profile != null ? profile.Youtube_url : "") })
                                    </div>
                                </div>
                                <div class="input-field col m6 s12">
                                    @Html.LabelFor(m => m.Instagram_url, new { @class = "col-md-2 control-label active" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Instagram_url, new { @class = "form-control", @Value = (profile != null ? profile.Instagram_url : "") })
                                    </div>
                                </div>
                            </div>
                            <div style="text-align: right">
                                <input class="waves-effect waves-light btn lighten-1 m-b-xs" value="Save change" type="submit">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


