@using CareerTech.Models
@{
    Layout = null;
    Profile profile = ViewBag.Profile;
    ICollection<Skill> skills = ViewBag.Skill;
    ICollection<Education> educations = ViewBag.Education;
    ICollection<Experience> experiences = ViewBag.Experience;
    ICollection<Product> products = ViewBag.Product;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <meta name="copyright" content="MACode ID, https://www.macodeid.com/">

    <title>Virtual Folio - Portfolio HTML5 Template</title>

    <link rel="shortcut icon" href="~/Content/Portfolio/assets/" type="image/x-icon">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/css/themify-icons.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/css/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/vendor/animate/animate.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/vendor/owl-carousel/owl.carousel.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/vendor/perfect-scrollbar/css/perfect-scrollbar.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/vendor/nice-select/css/nice-select.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/vendor/fancybox/css/jquery.fancybox.min.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/css/virtual.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/css/topbar.virtual.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Portfolio/assets/css/custom.css">
</head>
<body class="theme-red">

    <!-- Back to top button -->
    <div class="btn-back_to_top">
        <span class="ti-arrow-up"></span>
    </div>

    <!-- Setting button -->
    <div class="config">
        <div class="template-config">
            <!-- Settings -->
            <div class="d-block">
                <button class="btn btn-fab btn-sm" id="sideel" title="Settings"><span class="ti-settings"></span></button>
            </div>
            <!-- Puschase -->
            <div class="d-block">
                <a href="https://macodeid.com/projects/virtual-folio/" class="btn btn-fab btn-sm" title="Get this template" data-toggle="tooltip" data-placement="left"><span class="ti-download"></span></a>
            </div>
            <!-- Help -->
            <div class="d-block">
                <a href="#" class="btn btn-fab btn-sm" title="Help" data-toggle="tooltip" data-placement="left"><span class="ti-help"></span></a>
            </div>
        </div>
        <div class="set-menu">
            <p>Select Color</p>
            <div class="color-bar" data-toggle="selected">
                <span class="color-item bg-theme-red selected" data-class="theme-red"></span>
                <span class="color-item bg-theme-blue" data-class="theme-blue"></span>
                <span class="color-item bg-theme-green" data-class="theme-green"></span>
                <span class="color-item bg-theme-orange" data-class="theme-orange"></span>
                <span class="color-item bg-theme-purple" data-class="theme-purple"></span>
            </div>
            <select class="custom-select d-block my-2" id="change-page">
                <option value="">Choose Page</option>
                <option value="index">Topbar</option>
                <option value="blog-topbar">Blog (Topbar)</option>
                <option value="index-2">Minibar</option>
                <option value="blog-minibar">Blog (Minibar)</option>
            </select>
        </div>
    </div>

    <div class="vg-page page-home" id="home" style="background-image: url(http://res.cloudinary.com/anhduc/image/upload/v1634195594/l4amuueyfxoyyhtpcerg.jpg)">
        <!-- Navbar -->
        <div class="navbar navbar-expand-lg navbar-dark sticky" data-offset="500">
            <div class="container">
                <a href="" class="navbar-brand">V-Folio</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#main-navbar" aria-expanded="true">
                    <span class="ti-menu"></span>
                </button>
                <div class="collapse navbar-collapse" id="main-navbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a href="#home" class="nav-link" data-animate="scrolling">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#about" class="nav-link" data-animate="scrolling">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="#portfolio" class="nav-link" data-animate="scrolling">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a href="#contact" class="nav-link" data-animate="scrolling">Contact</a>
                        </li>
                    </ul>
                    <ul class="nav ml-auto">
                        <li class="nav-item">
                            <button class="btn btn-fab btn-theme no-shadow">En</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div> <!-- End Navbar -->
        <!-- Caption header -->
        <div class="caption-header text-center wow zoomInDown">
            <h5 class="fw-normal">Welcome</h5>
            <h1 class="fw-light mb-4">I'm <b class="fg-theme">@profile.Name</b></h1>
            <div class="badge">@profile.Position</div>
        </div> <!-- End Caption header -->
        <div class="floating-button"><span class="ti-mouse"></span></div>
    </div>

    <div class="vg-page page-about" id="about">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4 py-3">
                    <div class="img-place wow fadeInUp">
                        <img src="@(profile.Url_avatar!=null?profile.Url_avatar:"http://res.cloudinary.com/anhduc/image/upload/v1634354042/l7rdutyldpyjljqx8ony.jpg")" alt="">
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1 wow fadeInRight">
                    <h1 class="fw-light">@profile.Name</h1>
                    <h5 class="fg-theme mb-3">@profile.Position</h5>
                    <p class="text-muted">@profile.Desc</p>
                    <ul class="theme-list">
                        <li><b>Address:</b> @profile.Address</li>
                        <li><b>Age:</b> @profile.Age</li>
                        <li>
                            <b>Gender:</b>
                            @if (profile.Gender == true)
                            {
                                @Html.Label("Gender", "Male");
                            }
                            else
                            {
                                @Html.Label("Gender", "Female");
                            }
                        </li>
                    </ul>
                    <a href="/User/DownloadPortfolio/@profile.PortfolioID" class="btn btn-theme-outline">Download CV</a>
                </div>
            </div>
        </div>
        <div class="container py-5">
            <h1 class="text-center fw-normal wow fadeIn">My Skills</h1>
            <div class="row py-3">
                <div class="col-md-6">
                    <div class="px-lg-3">
                        @for (int i = 0; i < skills.Count; i += 2)
                        {
                            <div class="progress-wrapper wow fadeInUp">
                                <span class="caption">@skills.ElementAt(i).SkillName</span>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @skills.ElementAt(i).SkillLevel%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">@skills.ElementAt(i).SkillLevel%</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="px-lg-3">
                        @for (int i = 1; i < skills.Count; i += 2)
                        {
                            <div class="progress-wrapper wow fadeInUp">
                                <span class="caption">@skills.ElementAt(i).SkillName</span>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @skills.ElementAt(i).SkillLevel%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">@skills.ElementAt(i).SkillLevel%</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-6 wow fadeInRight">
                    <h2 class="fw-normal">Education</h2>
                    <ul class="timeline mt-4 pr-md-5">
                        @foreach (Education education in educations)
                        {
                            <li>
                                <div class="title">@education.Time</div>
                                <div class="details">
                                    @Html.Raw(education.Detail)
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-md-6 wow fadeInRight" data-wow-delay="200ms">
                    <h2 class="fw-normal">Experience</h2>
                    <ul class="timeline mt-4 pr-md-5">
                        @foreach (Experience experience in experiences)
                        {
                            <li>
                                <div class="title">@experience.Time</div>
                                <div class="details">
                                    @Html.Raw(experience.Detail)
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Portfolio page -->
    <div class="vg-page page-portfolio" id="portfolio">
        <div class="container">
            <div class="text-center wow fadeInUp">
                <div class="badge badge-subhead">Portfolio</div>
            </div>
            <h1 class="text-center fw-normal wow fadeInUp">See my work</h1>
            <div class="gridder my-3">
                @foreach (Product p in products)
                {
                    <div class="grid-item apps wow zoomIn">
                        <div class="img-place" data-src="@p.Url_Image" data-fancybox data-caption="<h5 class='fg-theme'>@p.Name</h5>
                            <div class='container'>
                            <div class='row'>
                            <div class='col-md-6 col-lg-3 py-3'>
                                <ul class='list-unstyled'>
                                    <li><b>Name: </b>@p.Name</li>
                                    <li><b>Domain: </b>@(p.Domain!=null?p.Domain:"N/A")</li>
                                    <li><b>Team size: </b>@(p.TeamSize!=null?p.TeamSize.ToString():"N/A")</li>
                                </ul>
                            </div>
                            <div class='col-md-6 py-3'>
                                <ul class='list-unstyled'>
                                    <li><b>Skill: </b>@(p.Skill!=null?p.Skill:"N/A")</li>
                                    <li><b>Project Tech: </b>@(p.ProjectTech!=null?p.ProjectTech:"N/A")</li>
                                    <li><b>Work Process: </b>@(p.WorkProces!=null?p.WorkProces:"N/A")</li>
                                </ul>
                            </div>
                            <div class='col-md-6 col-lg-3 py-3'>
                                <ul class='list-unstyled'>
                                    <li><b>Project Role: </b>@(p.ProjectRole!=null?p.ProjectRole:"N/A")</li>
                                    <li><b>Company: </b>@(p.Company!=null?p.Company:"N/A")</li>
                                </ul>
                            </div>
                        </div>
                        </div>
                        ">
                            <img src="@p.Url_Image" alt="">
                            <div class="img-caption">
                                <h5 class="fg-theme">@p.Name</h5>
                            </div>
                        </div>
                    </div>
                }
            </div> <!-- End gridder -->
        </div>
    </div> <!-- End Portfolio page -->
    <!-- Contact -->
    <div class="vg-page page-contact" id="contact">
        <div class="container-fluid">
            <div class="text-center wow fadeInUp">
                <div class="badge badge-subhead">Contact</div>
            </div>
            <h1 class="text-center fw-normal wow fadeInUp">Get in touch</h1>
            <div class="row py-5">
                <div class="col-lg-7 px-0 pr-lg-3 wow zoomIn">
                    <div class="vg-maps">
                        <div id="google-maps" style="width: 100%; height: 100%;"></div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <form class="vg-contact-form">
                        <div class="form-row">
                            <div class="col-12 mt-3 wow fadeInUp">
                                <input class="form-control" type="text" name="Name" placeholder="Your Name">
                            </div>
                            <div class="col-6 mt-3 wow fadeInUp">
                                <input class="form-control" type="text" name="Email" placeholder="Email Address">
                            </div>
                            <div class="col-6 mt-3 wow fadeInUp">
                                <input class="form-control" type="text" name="Subject" placeholder="Subject">
                            </div>
                            <div class="col-12 mt-3 wow fadeInUp">
                                <textarea class="form-control" name="Message" rows="6" placeholder="Enter message here.."></textarea>
                            </div>
                            <button type="submit" class="btn btn-theme mt-3 wow fadeInUp ml-1">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- End Contact -->
    <!-- Footer -->
    <div class="vg-footer">
        <h1 class="text-center">Virtual Folio</h1>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 py-3">
                    <div class="footer-info">
                        <p>Where to find me</p>
                        <hr class="divider">
                        <p class="fs-large fg-white">@profile.Address</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 py-3">
                    <div class="float-lg-right">
                        <p>Follow me</p>
                        <hr class="divider">
                        <ul class="list-unstyled">
                            <li><a href="http://@profile.Instagram_url" target="_blank">Instagram</a></li>
                            <li><a href="http://@profile.Facebook_url" target="_blank">Facebook</a></li>
                            <li><a href="http://@profile.Twitter_url" target="_blank">Twitter</a></li>
                            <li><a href="http://@profile.Youtube_url" target="_blank">Youtube</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 py-3">
                    <div class="float-lg-right">
                        <p>Contact me</p>
                        <hr class="divider">
                        <ul class="list-unstyled">
                            <li>@profile.Email</li>
                            <li>@profile.Phone</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 mb-3">
                    <h3 class="fw-normal text-center">Subscribe</h3>
                </div>
                <div class="col-lg-6">
                    <form class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Email address">
                            <input type="submit" class="btn btn-theme no-shadow" value="Subscribe">
                        </div>
                    </form>
                </div>
                <div class="col-12">
                    <p class="text-center mb-0 mt-4">Copyright &copy;2020. All right reserved | This template is made with <span class="ti-heart fg-theme-red"></span> by <a href="https://www.macodeid.com/">MACode ID</a></p>
                </div>
            </div>
        </div>
    </div> <!-- End footer -->


    <script src="~/Content/Portfolio/assets/js/jquery-3.5.1.min.js"></script>

    <script src="~/Content/Portfolio/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/owl-carousel/owl.carousel.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/perfect-scrollbar/js/perfect-scrollbar.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/isotope/isotope.pkgd.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/nice-select/js/jquery.nice-select.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/fancybox/js/jquery.fancybox.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/wow/wow.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/animateNumber/jquery.animateNumber.min.js"></script>

    <script src="~/Content/Portfolio/assets/vendor/waypoints/jquery.waypoints.min.js"></script>

    <script src="~/Content/Portfolio/assets/js/google-maps.js"></script>

    <script src="~/Content/Portfolio/assets/js/topbar-virtual.js"></script>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAIA_zqjFMsJM_sxP9-6Pde5vVCTyJmUHM&callback=initMap"></script>

</body>
</html>