@using CareerTech.Models
@model Experience
@{
    ViewBag.Title = "EditExperience";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
    Experience experience = ViewBag.Experience;
}
<main class="mn-inner inner-active-sidebar">
    <div class="middle-content">
        <div class="row no-m-t no-m-b">
            @Html.Partial("_Portfolio_Menu_Partial")
            <div class="col s12 m7 l9">
                <h5>@ViewBag.Portfolio.Name</h5>
                <div class="card">
                    <span class="@ViewBag.Type">@ViewBag.Message</span>
                    <div class="card-content">
                        @using (Html.BeginForm("EditExperience", "User", new { experienceID = experience.ID }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div id="example_wrapper" class="dataTables_wrapper">
                                <div class="row">
                                    @Html.TextBoxFor(m => m.PortfolioID, new { @readonly = "readonly", @class = "form-control hide", @Value = ViewBag.Portfolio.ID })
                                    <div class="input-field col s12">
                                        @Html.LabelFor(m => m.Time, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Time, new { @class = "form-control", required = "required", @Value = (experience != null ? experience.Time : "") })
                                        </div>
                                    </div>
                                    <div class="input-field col s12">
                                        @Html.LabelFor(m => m.Detail, new { @class = "col-md-2 control-label active" })
                                        <div class="col-md-10">
                                            @Html.TextArea("Detail", experience != null ? Html.Raw(experience.Detail).ToString() : "", new { @class = "ckeditor", required = "required" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="text-align: right">
                                <input class="waves-effect waves-light btn lighten-1 m-b-xs" value="Save change" type="submit">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



