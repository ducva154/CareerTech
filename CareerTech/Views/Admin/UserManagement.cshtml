@{
    ViewBag.Title = "UserManagement";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Data Tables</div>
        </div>
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">User Management</span>
                    <a href="@Url.Action("ExportUserData","Admin")">Export User Data To Excel</a>
                    <table id="example" class="display responsive-table datatable-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in ViewBag.User)
                            {
                                <tr>
                                    <td><span>@item.Id</span></td>
                                    <td><span>@(item.FullName==null?"No data" : item.FullName)</span></td>
                                    <td><span>@item.Email</span></td>
                                    <td><span>@(item.PhoneNumber==null?"No data":item.PhoneNumber)</span></td>
                                    <td><a href="deleteUser?userID=@item.Id" onlick="return ConfirmDelete()">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>


