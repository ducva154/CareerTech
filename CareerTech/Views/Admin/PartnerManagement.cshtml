
@{
    ViewBag.Title = "PartnerManagement";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}
@using CareerTech.Models
<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Data Tables</div>
        </div>
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Partner Management</span>
                    <table id="example" class="display responsive-table datatable-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Company</th>
                                <th>Address</th>
                                <th>Mail</th>
                                <th>View</th>
                                <th>Ban</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Company</th>
                                <th>Adress</th>
                                <th>Email</th>
                                <th>View</th>
                                <th>Ban</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var partner in ViewBag.Partners)
                            {
                            <tr>
                                <td>@(partner.UserID==null?"No data": partner.UserID)</td>
                                <td>@(partner.User.UserName==null?"No data":partner.User.UserName)</td>
                                <td>@(partner.CompanyName==null?"No data": partner.CompanyName)</td>
                                <td>@(partner.Address == null ? "No data" : partner.Address)</td>
                                <td>@(partner.User.Email==null?"No data":partner.User.Email)</td>
                                <td><a href="#"> View Profile </a></td>
                                <td><a href="#"> Ban </a></td>
                                <td><a href="#" onclick="return ConfirmDelete()">Delete</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

