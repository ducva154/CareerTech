
@{
    ViewBag.Title = "EditContent";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Form Elements</div>
        </div>
        <div class="col s12 m12 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Edit Content</span><br>
                    <div class="row">
                        @using (Html.BeginForm("EditContent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="price" type="text" class="validate" value="@ViewBag.Content.ID">
                                    <label for="last_name">Title</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <textarea id="editor1" name="des" class="validate">
                                        @Html.Raw(ViewBag.Content.Detail.ToString())
                                    </textarea>
                                    <label for="type">Detail</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                @Html.TextBox("file", "", new { type = "file" }) <br />
                            </div>
                            <div>
                                <button class="btn btn-primary" type="submit">Save Changes </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="~/Content/Dashboard/assets/plugins/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor1');
</script>


