
@{
    ViewBag.Title = "EditSubscription";
    Layout = "~/Views/Shared/_Layout_DashBoard.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Form Elements</div>
        </div>
        <div class="col s12 m12 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Input fields</span><br>
                    <div class="row">
                      @using (Html.BeginForm("EditSubscription", "Admin", FormMethod.Post,new { @class= "col s12" }))
                      {
                          <input type="text" name="id" hidden="" value="@ViewBag.SubInfo.ID"/>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input placeholder="SubName" name="SubName" id="name" type="text" class="validate" value="@ViewBag.SubInfo.Name">
                                    <label for="name">Subcription Name</label>
                                </div>

                            </div>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="price" type="number" name="price" class="validate" value="@ViewBag.SubInfo.Price">
                                    <label for="last_name">Price</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="type" type="text" name="type" class="validate" value="@ViewBag.SubInfo.Type">
                                    <label for="type">Type</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="date" type="number" name="period" class="validate">
                                    <label for="date">Period</label>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary" type="submit">Save Changes </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

